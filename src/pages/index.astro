		<script>
			// --- CONFIGURACI√ìN ---
			// 11 de Noviembre de 2025 (Mes es √≠ndice 10)
			const START_DATE = new Date(2025, 10, 11); 

			// --- CONTADOR ---
			function updateCounter() {
				const now = new Date();
				const diff = now - START_DATE;

				// Si la fecha es futura (por si acaso el sistema tiene otra hora), mostramos 0
				if (diff < 0) {
					document.getElementById('days').innerText = "0";
					document.getElementById('hours').innerText = "0";
					document.getElementById('minutes').innerText = "0";
					document.getElementById('seconds').innerText = "0";
					return;
				}

				const days = Math.floor(diff / (1000 * 60 * 60 * 24));
				const hours = Math.floor((diff / (1000 * 60 * 60)) % 24);
				const minutes = Math.floor((diff / 1000 / 60) % 60);
				const seconds = Math.floor((diff / 1000) % 60);

				document.getElementById('days').innerText = days;
				document.getElementById('hours').innerText = hours;
				document.getElementById('minutes').innerText = minutes;
				document.getElementById('seconds').innerText = seconds;
			}
			setInterval(updateCounter, 1000);
			updateCounter();

			// --- ANIMACIONES SCROLL ---
			const observer = new IntersectionObserver((entries) => {
				entries.forEach(entry => {
					if (entry.isIntersecting) {
						entry.target.classList.add('visible');
					}
				});
			}, { threshold: 0.1 });

			document.querySelectorAll('.fade-in-on-scroll').forEach(el => observer.observe(el));

			// --- BOT√ìN SECRETO ---
			const secretBtn = document.getElementById('secretBtn');
			const secretMsg = document.getElementById('secretMsg');
			secretBtn.addEventListener('click', () => {
				secretMsg.classList.add('revealed');
				secretBtn.style.display = 'none';
			});

			// --- BOT√ìN S√ç ---
			const yesBtn = document.getElementById('yesBtn');
			const noBtn = document.getElementById('noBtn');
			const celebration = document.getElementById('celebration');
			
			yesBtn.addEventListener('click', () => {
				celebration.classList.remove('hidden');
				celebration.classList.add('visible-celebration');
				yesBtn.style.display = 'none';
				noBtn.style.display = 'none';
				createHeartExplosion();
			});

			// --- BOT√ìN NO (HUYE) ---
			// Versi√≥n Desktop: Mouseover
			noBtn.addEventListener('mouseover', moveButton);
			
			// Versi√≥n Touch: Click/Touchstart (para que sea dif√≠cil de dar click)
			noBtn.addEventListener('click', (e) => {
				e.preventDefault(); // Evita click real si logra darle
				moveButton();
			});
			noBtn.addEventListener('touchstart', (e) => {
				// e.preventDefault(); // A veces bloquea el scroll, mejor solo move
				moveButton();
			});

			function moveButton() {
				// Asegurar que se mueve dentro de la ventana visible
				const x = Math.random() * (window.innerWidth - noBtn.offsetWidth - 40) + 20;
				const y = Math.random() * (window.innerHeight - noBtn.offsetHeight - 40) + 20;
				
				noBtn.style.position = 'fixed';
				noBtn.style.left = x + 'px';
				noBtn.style.top = y + 'px';
				noBtn.style.zIndex = '1000'; // Asegurar que quede encima
				noBtn.style.transition = 'all 0.4s ease'; // Movimiento suave
			}

			function createHeartExplosion() {
				for(let i=0; i<40; i++) {
					const heart = document.createElement('div');
					heart.innerHTML = '‚ù§Ô∏è';
					heart.className = 'confetti-heart';
					heart.style.left = Math.random() * 100 + 'vw';
					heart.style.animationDuration = (Math.random() * 3 + 2) + 's';
					document.body.appendChild(heart);
					setTimeout(() => heart.remove(), 5000);
				}
			}
		</script>

		<style>
			/* ESTILOS ESPEC√çFICOS DE LA LANDING */
			.container {
