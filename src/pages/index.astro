			/* Animations */
			.fade-in { animation: fadeIn 2s ease-out; } /* M√°s lento */
			
			.fade-in-on-scroll {
				opacity: 0;
				transform: translateY(50px);
				transition: all 1.2s ease-out; /* Transici√≥n m√°s larga */
			}
			.fade-in-on-scroll.visible {
				opacity: 1;
				transform: translateY(0);
			}

			/* Secret Message Animation */
			.hidden-msg { 
				display: none; 
				opacity: 0; 
				transition: opacity 1s ease-in;
			}
			.hidden-msg.revealed { 
				display: block; 
				opacity: 1;
				animation: fadeIn 1.5s ease-out;
			}
			
			.hidden { display: none !important; }
			
			.visible-celebration { 
				display: block !important; 
				margin-top: 3rem; 
				font-weight: 600; 
				color: var(--color-accent); 
				font-size: 1.8rem;
				line-height: 1.6;
				animation: popIn 0.8s cubic-bezier(0.34, 1.56, 0.64, 1);
