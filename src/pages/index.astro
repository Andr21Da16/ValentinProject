			/* Randomize sizes and delays */
			.floating-hearts span:nth-child(1) { left: 10%; animation-duration: 25s; animation-delay: 0s; font-size: 1.5rem; }
			.floating-hearts span:nth-child(2) { left: 25%; animation-duration: 30s; animation-delay: 5s; font-size: 2.2rem; }
			.floating-hearts span:nth-child(3) { left: 50%; animation-duration: 22s; animation-delay: 2s; font-size: 1.2rem; }
			.floating-hearts span:nth-child(4) { left: 75%; animation-duration: 28s; animation-delay: 7s; font-size: 1.8rem; }
			.floating-hearts span:nth-child(5) { left: 90%; animation-duration: 35s; animation-delay: 4s; font-size: 1.5rem; }

			@keyframes floatUp {
				0% { transform: translateY(0) rotate(0deg); opacity: 0; }
				15% { opacity: 0.3; }
				90% { opacity: 0.3; }
				100% { transform: translateY(-120vh) rotate(360deg); opacity: 0; }
			}

			.signature {
				margin-top: 5rem;
				font-family: var(--font-heading);
				font-size: 2rem;
				color: var(--color-accent);
				padding-bottom: 2rem;
				opacity: 0.9;
			}
		</style>
	</body>
</html>
